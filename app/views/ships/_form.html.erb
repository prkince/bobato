<%= form_for(@ship) do |f| %>
  
  <% if current_page?(new_ship_path) %>
    <div class="ship-category">
      <%= f.label :category %>
    </div>
    <div id="form-categories">
      <div class="check-boxes">
        <%= f.collection_check_boxes :category, @categories, :id, :name, class: 'form-control' %>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :dimension %>
    <%= f.text_field :dimension, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :photo_url %>
    <%= f.url_field :photo_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_field :detail, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  
  <div class='btn-form'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>