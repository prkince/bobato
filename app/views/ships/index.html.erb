<!-- Banner Start -->
<section class="section banner">
  <div class="container">
    <div class="row">
      <div class="col-lg-10">
         <h2 class="cd-headline clip is-full-width">
          Bobato Ship Models           </h2>
            <h2 style="color: white">        
              <span class="cd-words-wrapper text-color" id="banner-typed-text"></span>
            </h2>
          <p class="mt-4">Beautifully crafted ship models from the island of Mauritius.</p>
      </div>
    </div>
  </div>
</section>

<!-- Banner End -->
<div class="video-edou">
   <video controls preload="true" autoplay loop muted>
